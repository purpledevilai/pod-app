{
  "expo": {
    "name": "pod-app",
    "slug": "pod-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "podapp",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "buildNumber": "2",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to enable voice conversations with the AI agent.",
        "NSCameraUsageDescription": "This app needs access to your camera for video calls.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.keanu-interone-ajentify.pod-app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS",
        "BLUETOOTH",
        "BLUETOOTH_CONNECT",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "CAMERA",
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS",
        "BLUETOOTH",
        "BLUETOOTH_CONNECT",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "package": "com.keanuinteroneajentify.podapp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/pod.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#f7f9f7"
        }
      ],
      "expo-secure-store",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "ce91f1b0-b542-43bf-83cb-24e23d9f0eab"
      }
    }
  }
}
